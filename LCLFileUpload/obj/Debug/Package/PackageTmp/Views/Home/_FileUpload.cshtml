
<ol class="round">
    <li class="one">
        <h5>Select The File to Process</h5>
        
        @using(Html.BeginForm()) {
        @Html.DevExpress().UploadControl(settings => {
        settings.Name = "UploadControl";
        settings.CallbackRouteValues = new { Controller = "Home", Action = "ProcessFile" };
        settings.ShowAddRemoveButtons = false;
        settings.ShowProgressPanel = true;
        settings.ShowClearFileSelectionButton = true;
        settings.ShowUploadButton = true;
        settings.Size = 30;
    }).GetHtml()
}
    </li>

    <li class="two">
        <h5>Process File</h5>
    </li>

    <li class="three">
        <h5>Add File to Include Package</h5>
    </li>
</ol>
