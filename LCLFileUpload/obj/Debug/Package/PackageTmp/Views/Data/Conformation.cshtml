@model LCLFileUpload.Models.JobListforDLPM


@{
    ViewBag.Title = "List Of Jobs - Confirmation";
}

<h3>List Of Jobs - Confirmation</h3>
<br />
<hr style="color:#c00;background-color:#c00;height:1px;border:none;" />
<table>
    <tr>
    @foreach (System.Data.DataColumn Col in Model.JobList.Columns)
        {
            <th>
                    @if (@Col.ColumnName != "Select")
                    {
                        <h7>@Col.ColumnName </h7>}
                    else {}
            </th>
            <td>
            </td>
    }
    </tr>
    <tbody>
    @foreach (System.Data.DataRow Row in Model.JobList.Rows)
    {
        <tr>
            @for (int i = 0; i <= Model.JobList.Columns.Count - 1; i++)
            {
                  <td>
                    @if (Model.JobList.Columns[i].ColumnName != "Select")
                    {
                        <h6>@Row[i].ToString()</h6>
                    }
                    else
                    {
                        <h5>@Html.ActionLink("Confirm", "ConfirmJob", new { JobNo = @Row[i].ToString().Trim() })</h5>
                        <h5>@Html.ActionLink("Add Notes", "AddNotes", new { JobNo = @Row[i].ToString().Trim() })</h5>
                    }   
                  </td>
                
                <td> @ViewBag.Message</td>
            }
        </tr>
    }
    </tbody>
</table>

