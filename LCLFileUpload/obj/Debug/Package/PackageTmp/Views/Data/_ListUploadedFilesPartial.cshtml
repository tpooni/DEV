@model LCLFileUpload.Models.ListOfUploadedFiles
@{
    Layout = null;
}

@{
    ViewBag.Title = "Valid Uploaded Files";
}

<h3>Valid Uploaded Files (Tag Count = @Model.FileList.Rows.Count)</h3>
 
<hr style="color:#c00;background-color:#c00;height:1px;border:none;" />
<table>
    <tr>
    @foreach (System.Data.DataColumn Col in Model.FileList.Columns)
        {
            <th>
                    @if (@Col.ColumnName != "Select")
                    {
                        <h7>@Col.ColumnName </h7>}
                    else {}
            </th>
            <td>
            </td>
    }
    </tr>
    <tbody>
    @foreach (System.Data.DataRow Row in Model.FileList.Rows)
    {
        <tr>
            @for (int i = 0; i <= Model.FileList.Columns.Count - 1; i++)
            {
                  <td>
                    @if (Model.FileList.Columns[i].ColumnName != "Select")
                    {
                        <h6>@Row[i].ToString()</h6>
                    }
                        </td>
                <td></td>
            }
        </tr>
    }
    </tbody>
</table>

