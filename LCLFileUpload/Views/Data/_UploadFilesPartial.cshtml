@{
    Layout = null;
}
@{
    ViewBag.Title = "Upload Terminal Files";
}
<hgroup class="title">
    <h3>@ViewBag.Title</h3>
    <h3>@ViewBag.Message</h3>
    <hr style="color:#c00;background-color:#c00;height:1px;border:none;" />

</hgroup>

@using (Html.BeginForm("UploadFiles", "Data", new { JobNo = Request.Params["JobNo"] }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset >

    <!-- <div style="color:Red;font-size:20px">@ViewBag.Message</div>-->
        <h4>@ViewBag.Message</h4>
    <input type="file" name="files" value="" multiple="multiple"/>
    <input type="submit" id="saveButton" value="Upload Terminal Files"  title="Uplad"/>
    </fieldset>
}


